---
interface Props {
  icon: string;
  href: string;
}

const { href, icon } = Astro.props;
---

<a href={href} target="_blank">
  <i class={icon} aria-hidden="true"></i>
</a>

<style>
  i {
    color: var(--white-alpha-600);
    font-size: 1.5rem;
    transition: all 0.15s ease-in-out;
  }

  i:hover {
    color: var(--white-alpha-800);
    transform: scale(0.95);
  }

  i::after {
    content: "";
    position: absolute;
    width: 100%;
    height: 0.2rem;
    bottom: -0.7rem;
    transform: translateY(0.2rem);
    left: 0;
    background-color: transparent;
    transition: all 0.15s ease-in-out;
    border-radius: 0.1rem;
  }

  /* i hover after     */
  i:hover::after {
    content: "";
    position: absolute;
    width: 100%;
    height: 0.2rem;
    bottom: -0.5rem;
    transform: translateY(0);
    left: 0;
    background-color: var(--white-alpha-800);
  }
</style>
